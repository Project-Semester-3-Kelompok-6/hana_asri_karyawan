<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewKaryawanHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/karyawan_ic_tugas_fragment"
                android:elevation="5dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_judulKaryawanHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:elevation="6dp"
            android:text="Upload Reels IG"
            android:textStyle="bold"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/profil"/>

        <TextView
            android:id="@+id/tv_deskripsiKaryawanHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mengupload video promosi dibulan Ramadhan"
            card_view:layout_constraintTop_toBottomOf="@id/tv_judulKaryawanHome"
            card_view:layout_constraintStart_toEndOf="@id/profil"/>
        <TextView
            android:id="@+id/tv_tanggalKaryawanHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="17 Oktober 2023"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_deskripsiKaryawanHome"
            card_view:layout_constraintStart_toEndOf="@id/profil"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>