<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Karyawan.AbsensiFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_lihat_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/izin_ic_absenmasuk"
            android:contentDescription="Masuk menu lihat dan bisa edit"
            android:onClick="btn_lihat_data"/>

        <ImageButton
            android:id="@+id/btn_tambah_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/izin_ic_absenmasuk"
            android:contentDescription="Tambah Data Pengguna"
            android:onClick="btn_tambah_data"/>

        <ImageButton
            android:id="@+id/btn_tentang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/izin_ic_absenmasuk"
            android:contentDescription="Tentang pembuat aplikasi"
            android:onClick="btn_Tentang"/>

    </LinearLayout>




</LinearLayout>